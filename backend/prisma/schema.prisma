generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"

}


model Game {
  id Int @id @default(autoincrement())
  startedAt DateTime 
  finishedAt DateTime
  elapsedTime Int
  score  Score?
}



model Score{
  id Int @id @default(autoincrement())
  time Int
  createdAt DateTime @default(now())
  gameId Int @unique
  game Game @relation(references: [id], fields: [gameId])
  playerName String
}