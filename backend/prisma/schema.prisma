generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"

}


model Game {
  id Int @id @default(autoincrement())
  startedAt DateTime @default(now())
  finishedAt DateTime?
  status String @default("ongoing") // ongoing/abandoned/finished
  targetId Int
  target Target @relation(fields: [targetId], references: [id])
}

model Target{
  id Int @id 
  name String
  leftCoord Float
  topCoord Float
  width Float
  height Float
  iconPath String  // file path in supabase

  games Game[]
}